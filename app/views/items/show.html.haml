- model_class = Item
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:sellable_id)
      \:
  %dd= @item.sellable_id
  %dt
    %strong
      = model_class.human_attribute_name(:sellable_type)
      \:
  %dd= @item.sellable_type
  %dt
    %strong
      = model_class.human_attribute_name(:name)
      \:
  %dd= @item.name
  %dt
    %strong
      = model_class.human_attribute_name(:fixed_price)
      \:
  %dd= @item.fixed_price
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), |
    items_path, :class => 'btn'                              |
  -#
  = link_to t('.edit', :default => t("helpers.links.edit")), |
    edit_item_path(@item), :class => 'btn'                   |
  -#
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
    item_path(@item),                                                                                            |
    :method => 'delete',                                                                                         |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
    :class => 'btn btn-danger'                                                                                   |
