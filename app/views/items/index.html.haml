- model_class = Item
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:sellable_id)
      %th= model_class.human_attribute_name(:sellable_type)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:fixed_price)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @items.each do |item|
      %tr
        %td= link_to item.id, item_path(item)
        %td= item.sellable_id
        %td= item.sellable_type
        %td= item.name
        %td= item.fixed_price
        %td= l item.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), |
            edit_item_path(item), :class => 'btn btn-mini'           |
          -#
          = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
            item_path(item),                                                                                             |
            :method => :delete,                                                                                          |
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
            :class => 'btn btn-mini btn-danger'                                                                          |
= link_to t('.new', :default => t("helpers.links.new")), |
  new_item_path,                                         |
  :class => 'btn btn-primary'                            |
