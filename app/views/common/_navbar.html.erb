<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
			<a class="brand" href="/">PICSY-Rails</a>
      <div class="nav-collapse collapse navbar-responsive-collapse">
        <ul class="nav">
          <li><%= link_to "市場", :markets %></li>
        </ul>

        <ul class="nav pull-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <% if user_signed_in? %>
              <%= image_tag current_user.image, :height => '24px', :width => "24px", :style => "margin:-7px 2px -2px 0" %>
              <%= current_user.name %>
            <% else %>
							<i class="icon-twitter icon-large"></i>
            <% end %>
              <b class="caret"></b>
            </a>

            <ul class="dropdown-menu">
              <% if user_signed_in? %>
                <li><%= link_to 'ログアウト', sign_out_path %></li>
              <% else %>
                <li><%= link_to "Twitter IDでログイン", user_omniauth_authorize_path(:twitter) %></li>
              <% end %>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
							<i class="icon-cog icon-large"></i>
              <b class="caret"></b>
            </a>

            <ul class="dropdown-menu">
							<% @themes.each do |theme| %>
								<li><%= link_to theme, { :controller => "home", :action => "change_theme", :theme => h(theme) }, :method => :post %></li>
							<% end %>
            </ul>
          </li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>

<% [:notice, :error, :alert].each do |level| %>
  <% unless flash[level].blank? %>
    <div class="alert-message <%= flash_class(level) %>">
      <a class="close" href="#">×</a>
      <%= content_tag :p, flash[level] %>
    </div>
  <% end %>
<% end %>
