<%- model_class = Propagation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:market_id) %>:</strong></dt>
  <dd><%= @propagation.market_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:trade_id) %>:</strong></dt>
  <dd><%= @propagation.trade_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:evaluatable_id) %>:</strong></dt>
  <dd><%= @propagation.evaluatable_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:evaluatable_type) %>:</strong></dt>
  <dd><%= @propagation.evaluatable_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @propagation.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category) %>:</strong></dt>
  <dd><%= @propagation.category %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              propagations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_propagation_path(@propagation), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              propagation_path(@propagation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
