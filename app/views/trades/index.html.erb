<%- model_class = Trade -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:market_id) %></th>
      <th><%= model_class.human_attribute_name(:buyable_id) %></th>
      <th><%= model_class.human_attribute_name(:buyable_type) %></th>
      <th><%= model_class.human_attribute_name(:sellable_id) %></th>
      <th><%= model_class.human_attribute_name(:sellable_type) %></th>
      <th><%= model_class.human_attribute_name(:item_id) %></th>
      <th><%= model_class.human_attribute_name(:amount) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @trades.each do |trade| %>
      <tr>
        <td><%= link_to trade.id, trade_path(trade) %></td>
        <td><%= trade.market_id %></td>
        <td><%= trade.buyable_id %></td>
        <td><%= trade.buyable_type %></td>
        <td><%= trade.sellable_id %></td>
        <td><%= trade.sellable_type %></td>
        <td><%= trade.item_id %></td>
        <td><%= trade.amount %></td>
        <td><%=l trade.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_trade_path(trade), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      trade_path(trade),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_trade_path,
            :class => 'btn btn-primary' %>
